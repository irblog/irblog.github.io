<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text">i8z.de</title>
  <subtitle type="text">Personal blog</subtitle>
  <link type="application/atom+xml" href="https://i8z.de/feed.atom" rel="self"/>
  <link rel="alternate" type="text/html"
   hreflang="en" href="https://i8z.de"/>
<updated>{{ collections.post | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>urn:uuid:60a76c80-d399-2222-b93C-0003939e0af6</id>
  <author>
    <name>Ingo Radatz</name>
  </author>
  <rights>Copyright (c) 2022, Ingo Radatz</rights>
  {%- for post in collections.post %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl("https://i8z.de") }}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link rel="alternate" type="text/html" href="{{ absolutePostUrl }}"/>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="xhtml" xml:lang="en"
     xml:base="https://i8z.de/">
      <div xmlns="http://www.w3.org/1999/xhtml"><p>{{ post.data.teaser }}</p></div></content>
  </entry>
  {%- endfor %}
</feed>